<h1><%= @cocktail.name %></h1>
<%= link_to "Back", cocktails_path %>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "Delete dose",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
<% end %>

<%= link_to "new dose", new_cocktail_dose_path(@cocktail) %>
