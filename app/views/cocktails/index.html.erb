<div class="stuff_container">
  <div class="card_container">
    <div class="card_list">
      <% @cocktails.each do |cocktail| %>
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card_category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('')">
            <%= cocktail.name %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
